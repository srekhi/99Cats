<h1> <%= @cat.name %> </h1>
<table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Age</td>
        <td> <%= @cat.age %> </td>
      </tr>
      <tr>
        <td>Color</td>
        <td> <%= @cat.color %> </td>
      </tr>
      <tr>
        <td>Name</td>
        <td> <%= @cat.name %> </td>
      </tr>
      <tr>
        <td>Sex</td>
        <td> <%= @cat.sex %> </td>
      </tr>
    </tbody>
</table>
<p><%= @cat.description %></p>
<table>
    <thead>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
        <!-- <th>Approve Button </th> -->
      </tr>
    </thead>
    <tbody>
        <% @requests.order(:start_date).each do |request| %>
        <% next unless request.status == 'APPROVED' %>
        <tr>
          <td><%=request.start_date%></td>
          <td><%=request.end_date%></td>
          <td><%=request.status%></td>
          <!-- <td><%#=button_to 'Approve?', action: request.approve%></td> -->
        </tr>
        <% end %>
    </tbody>
</table>
